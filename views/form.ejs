<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Restaurants</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <!-- Header -->
    <header>
        <h1>Project Restaurants</h1>
    </header>

    <!-- Main Content -->
    <div class="container">
        <h2>Search Restaurants</h2>
        <form action="/search" method="POST" class="search-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="page">Page:</label>
                    <input type="number" id="page" name="page" required>
                </div>
                <div class="form-group">
                    <label for="perPage">Per Page:</label>
                    <input type="number" id="perPage" name="perPage" required>
                </div>
                <div class="form-group">
                    <label for="borough">Borough (optional):</label>
                    <input type="text" id="borough" name="borough">
                </div>
            </div>
            <button type="submit">Search</button>
        </form>

        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>

        <% if (restaurants) { %>
            <!-- Search results for user search -->
            <h2>Search Results</h2>
            <table class="results-table">
                <thead>
                    <tr>
                        <!-- Table Header -->
                        <th>Name</th>
                        <th>Borough</th>
                        <th>Cuisine</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Restaurant details in table format -->
                    <% restaurants.forEach(restaurant => { %>
                        <tr>
                            <td><%= restaurant.name %></td>
                            <td><%= restaurant.borough %></td>
                            <td><%= restaurant.cuisine %></td>
                            <td>
                                <%= restaurant.address.building %> <%= restaurant.address.street %>, <%= restaurant.address.zipcode %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Project Restaurants. All rights reserved.</p>
    </footer>
</body>
</html>
